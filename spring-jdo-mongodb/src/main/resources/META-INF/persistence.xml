<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="PersistenceUnit">
		<class>com.desire3d.examples.jdo.model.Product</class>
		<class>com.desire3d.examples.jdo.model.ShoppingCart</class>
		<class>com.desire3d.examples.jdo.model.CartItem</class>
		<exclude-unlisted-classes />
		<properties>
			<property name="datanucleus.ConnectionURL" value="mongodb:/onlineshopdb" />
			<!-- <property name="javax.jdo.option.ConnectionUserName" value="desire" 
				/> <property name="javax.jdo.option.ConnectionPassword" value="desire" /> -->
			<property name="datanucleus.schema.autoCreateAll" value="true" />
			<property name="datanucleus.schema.validateTables" value="false" />
			<property name="datanucleus.schema.validateConstraints"
				value="false" />
		</properties>
	</persistence-unit>
</persistence>